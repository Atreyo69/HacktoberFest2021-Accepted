#include<stdio.h>
#include<conio.h>
void main()
{
    int r,i,j,k;
    printf("Enter the number of rows:\n");
    scanf("%d",&r);
    for(i=1;i<=r;i++)
    {
        for(j=1;j<=r-i;j++)
            printf(" ");
        for(k=1;k<=i;k++)
            printf("%d",k);
        for(k=i-1;k>=1;k--)
            printf("%d",k);
        printf("\n");
    }
    getch();
}
