#include<stdio.h>
#include<conio.h>
void main()
{
    int i,j,k,r;
    printf("Enter the number of rows : ");
    scanf("%d",&r);
    for(i=r;i>=1;i--)
    {
        for(j=i;j<=r;j++)
            printf(" ");
        for(k=1;k<=2*i-1;k++)
            printf("*");

        printf("\n");
    }
    getch();
}
